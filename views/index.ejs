  <section class="section-reviews">
    <div class="bg-video">
      <!-- Video by RODNAE Productions from Pexels / Video by ArtHouse Studio from Pexels / Video by cottonbro from Pexels -->
      <video class="bg-video__content" autoplay muted loop>
        <source src="img/salon-hair-dressign.mp4" type="video/mp4" />
        Your browser is not supported!
